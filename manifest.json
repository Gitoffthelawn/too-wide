{
	"manifest_version": 2,
	"name": "Too Wide!",
	"version": "1.1",
	"icons": {
		"24": "/icons/icon-24.png",
		"48": "/icons/icon-48.png",
		"96": "/icons/icon-96.png"
	},

	"permissions": [
		"activeTab",
		"contextMenus",
		"storage"
	],

	"background": {
		"scripts": ["background.js"]
	},

	"options_ui": {
		"page": "/options/options.html"
	}
}
